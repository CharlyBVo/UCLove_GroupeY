<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.charles_henry.testquimarche.RechercheActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:text="Veuillez entrer vos préférences"
            android:id="@+id/textViewTexteInformatif"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.09"
            android:textSize="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sexe"
                android:id="@+id/textViewGenre"
                android:layout_weight="0.97"
                android:textSize="18dp"
                android:textColor="@color/black" />

            <Spinner
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGenre" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Langue"
                android:id="@+id/textView13"
                android:layout_weight="0.97"
                android:textSize="18dp"
                android:textColor="@color/black" />

            <Spinner
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:id="@+id/spinnerLangue" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:layout_weight="0.13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Cheveux"
                android:id="@+id/textView14"
                android:layout_weight="0.98"
                android:textSize="18dp"
                android:textColor="@color/black" />

            <Spinner
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:id="@+id/spinnerCheveux" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:layout_weight="0.14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Couleur yeux"
                android:id="@+id/textView15"
                android:layout_weight="0.98"
                android:textSize="18dp"
                android:textColor="@color/black" />

            <Spinner
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:id="@+id/spinnerYeux" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:layout_weight="0.14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Orientation"
                android:id="@+id/textView17"
                android:layout_weight="0.97"
                android:textSize="18dp"
                android:textColor="@color/black" />

            <Spinner
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:id="@+id/spinnerOrientation" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal">

            <ImageButton
                android:layout_width="179dp"
                android:layout_height="117dp"
                android:id="@+id/ImageButton"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal|bottom"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:backgroundTint="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Recherche !"
                android:id="@+id/textView16"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="15dp" />


        </FrameLayout>
    </LinearLayout>
    </RelativeLayout>
