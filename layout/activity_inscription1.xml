<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.27"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/logo"
                android:layout_gravity="center" />

        </FrameLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="ajouter photo"
            android:id="@+id/button11"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText12"
            android:layout_gravity="center_horizontal"
            android:hint="@string/EnterLogin" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText13"
            android:layout_gravity="center_horizontal"
            android:hint="@string/EnterPswd" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText14"
            android:layout_gravity="center_horizontal"
            android:hint="@string/EnterPswd" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText11"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:hint="@string/Prenom" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText6"
            android:layout_gravity="center_horizontal"
            android:hint="@string/Nom" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_gravity="center_horizontal"
            android:hint="@string/Datedenaissance" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText8"
            android:layout_gravity="center_horizontal"
            android:hint="@string/Telephone" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText9"
            android:layout_gravity="center_horizontal"
            android:hint="@string/Email" />

        <RadioGroup
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Sexe"
                android:id="@+id/textView3"
                android:autoText="false"
                android:textSize="18dp"
                android:textColor="#000000" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:id="@+id/radioButton4"
                android:layout_gravity="right"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:id="@+id/radioButton5"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Autresexe"
                android:id="@+id/radioButton6"
                android:checked="true" />
        </RadioGroup>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText10"
            android:layout_gravity="center_horizontal"
            android:hint="@string/Ville" />

        <RadioGroup
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Orientation"
                android:id="@+id/textView4"
                android:autoText="false"
                android:textSize="18dp"
                android:textColor="#000000" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Hetero"
                android:id="@+id/radioButton7"
                android:layout_gravity="right"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bi"
                android:id="@+id/radioButton8"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gay"
                android:id="@+id/radioButton9"
                android:checked="false" />
        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:text="@string/Cheveux"
                android:id="@+id/textView6"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textAlignment="center" />

            <Spinner
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="137dp"
                android:layout_height="match_parent"
                android:text="@string/Yeux"
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_weight="0.00" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
                android:layout_gravity="bottom" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Langue"
                android:id="@+id/textView5"
                android:autoText="false"
                android:textColor="#000000"
                android:textSize="18dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FranÃ§ais"
                android:id="@+id/radioButton10"
                android:layout_gravity="right"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Anglais"
                android:id="@+id/radioButton11"
                android:checked="true"
                android:layout_gravity="bottom" />

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S&apos;inscrire"
            android:id="@+id/button10"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>