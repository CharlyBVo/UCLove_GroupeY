<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:text="@string/PreferenceDeVisibilite"
            android:id="@+id/textView38"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:gravity="center"
            android:password="false"
            android:textColor="@color/Menu" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="199dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/NameVisibility"
                    android:id="@+id/textView3"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/PhotoVisibility"
                    android:id="@+id/textView4"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/VisibiliteDeLaVille"
                    android:id="@+id/textView5"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/VisibiliteDuTelephone"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/VisibiliteDuMail"
                    android:id="@+id/textView7"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/VisibiliteDeLorientation"
                    android:id="@+id/textView8"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="223dp"
                    android:layout_height="80dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/VisibiliteDeMesDisponibilites"
                    android:id="@+id/textView9"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="186dp"
                    android:layout_height="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/VisibiliteDeLaCouleurDeMesYeux"
                    android:id="@+id/textView10"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/VisibiliteDesDonneesSurMesCheveux"
                    android:id="@+id/textView11"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/spinner"
                    android:layout_gravity="right" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/spinner2"
                    android:layout_gravity="right" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/spinner3"
                    android:layout_gravity="center_horizontal" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/spinner4"
                    android:layout_gravity="center_horizontal" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/spinner5"
                    android:layout_gravity="center_horizontal" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/spinner6"
                    android:layout_gravity="center_horizontal" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/spinner9"
                    android:layout_gravity="center_horizontal" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/spinner7"
                    android:layout_gravity="center_horizontal" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/spinner8"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>