<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.49">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:text="Menu"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textSize="65sp"
            android:gravity="center"
            android:password="false"
            android:textColor="#c30f12" />
    </FrameLayout>

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="@string/myProfileButton"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="@string/myFriendsButton"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="@string/myMeetingButton"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="@string/myMessagesButton"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="@string/ResearchButton"
        android:id="@+id/button7"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="@string/myHistoryButton"
        android:id="@+id/button8"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="@string/parametersButton"
        android:id="@+id/button9"
        android:layout_gravity="center_horizontal" />
</LinearLayout>