<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:text="@string/Titrechangerpsw"
            android:id="@+id/textView45"
            android:layout_gravity="center"
            android:gravity="center"
            android:password="false"
            android:textColor="@color/Menu"
            android:textSize="26dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="192dp"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="@string/Ancienpsw"
                    android:id="@+id/textView42"
                    android:layout_gravity="left"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:paddingLeft="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="@string/Nouveaupsw"
                    android:id="@+id/textView43"
                    android:layout_gravity="left"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:paddingLeft="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="@string/Confirmerpsw"
                    android:id="@+id/textView44"
                    android:layout_gravity="left"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:paddingLeft="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/editText25"
                    android:hint="@string/Pasinfo"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/editText26"
                    android:hint="@string/Pasinfo"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/editText27"
                    android:hint="@string/Pasinfo"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ConfirmButton"
            android:id="@+id/button16"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>